@{
    ViewBag.Title = "Adăugare categorie";
}   

@model OnlineShopApp.Models.Category

<h3 class="text-center mt-4">@ViewBag.Title</h3>
<hr />

<div class="container col-6">
    @using (Html.BeginForm(actionName: "New", controllerName: "Categories", method: FormMethod.Post))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        @Html.LabelFor(m => m.CategoryName, "Nume categorie")
        <br />
        @Html.TextBoxFor(m => m.CategoryName, null, new { @class = "form-control"})
        <br />
        <div class="d-flex justify-content-center">
            <button class="btn btn-primary" type="submit">Adaugă categorie</button>
        </div>
    }
</div>

