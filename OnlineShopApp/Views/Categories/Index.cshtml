
@{
    ViewBag.Title = "Lista categorii";
}

<h2>@ViewBag.Title</h2>
<br />  

<a href="/Products/Index">Inapoi la produse</a>
<br />
<br />


@foreach (var category in ViewBag.Categories)
{
    <p>@category.CategoryName</p>
    <a class="btn alert-success" href="/Categories/Edit/@category.Id">Editeaza categoria</a>
    <form method="post" action="/Categories/Delete/@category.Id">
        <button class="btn btn-danger" type="submit">Sterge categoria</button>
    </form>
    <br />
}

<br />
<a class="btn btn-success" href="/Categories/New">Adauga o noua categorie</a>
<br />

