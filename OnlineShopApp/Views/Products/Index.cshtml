@{
    ViewBag.Title = "Listă Produse";
    var price = 0.0;
}

<h3>@ViewBag.Title</h3>
<hr />

@if (ViewBag.isCollaborator || ViewBag.isAdmin)
{
    <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="New">Adaugă produs</a>
}
@if (ViewBag.isAdmin)
{
    <a class="btn btn-success" asp-area="" asp-controller="Products" asp-action="Validate">Validare produse</a>
}
<br />
<br />

<style>
    p, strong, s{
        margin: 3px 0;
    }
    .product-card{
        width: 24%;
    }
    a, a:hover{
        text-decoration: none;
        color: black;
    }
</style>
<div class="d-flex flex-row flex-wrap justify-content-between">
    @foreach (var product in @ViewBag.Products)
    {
        price = product.Price;
        <a class="card product-card my-2"  href="/products/show/@product.Id">
           <div style="position: relative">
                <img src="~/img/products/image_1.jpg" class="card-img-top" alt="Product image">
                @if (product.Discount > 0)
                {
                    <strong class="text-danger m-0" style="position: absolute;  top: 8px; left: 8px">REDUCERE -@(product.Discount*100)%</strong>
                }
          </div>
          <div class="d-flex flex-column justify-content-center text-center">
                <h5 class="card-title mt-1">@product.Title</h5>
                <div class="d-flex flex-row justify-content-around">
                    @if(product.Discount > 0){
                        <s class="text-secondary" style="font-size: 0.9rem;">@String.Format("{0:0.00}", @product.Price) RON</s>
                        price -= price * product.Discount;
                    }
                    <strong class="text-success">@String.Format("{0:0.00}", @price) RON</strong>
                </div>
                <p>Categorie: @product.Category.CategoryName</p>
                <p>Vândut de către @product.User.UserName</p>
                <div class="btn btn-warning my-2" style="width: 70%; margin: auto">Adaugă în coș <i class="bi bi-basket"></i></div>
           </div>
        </a>
    }
</div>