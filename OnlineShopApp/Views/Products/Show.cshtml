@{
    ViewBag.Title = "Afișare produs";
    var price = ViewBag.Product.Price;
}

<div class="d-flex align-items-baseline">
    <h3>@ViewBag.Product.Title</h3> 
    @if (@ViewBag.Product.Discount > 0)
    {
        <p class="text-danger" style="margin-left: 10px">-@(ViewBag.Product.Discount * 100)% reducere</p>
    }
</div>
<hr />
<img src="~/img/products/image_1.jpg"/>

    <p>Vândut de către Admin</p>
    @if (ViewBag.Product.Discount > 0)
    {
        <p class="text-secondary"><s>Preț vechi @String.Format("{0:0.00}", @ViewBag.Product.Price) RON</s></p>
        price -= price * ViewBag.Product.Discount;
    }
    <p>Preț @String.Format("{0:0.00}", @price) RON</p>

<p>@ViewBag.Product.Description</p>

@if (ViewBag.Product.Discount > 0)
{
    <a class="btn btn-secondary" href="/products/validate/@ViewBag.Product.Id">Validează</a>
}
<a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Edit"  asp-route-id="@ViewBag.Product.Id">Editează</a>
<a class="btn btn-danger" asp-area="" asp-controller="Products" asp-action="Delete" asp-route-id="@ViewBag.Product.Id" >Șterge</a>